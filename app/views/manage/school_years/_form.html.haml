= render :partial => "manage/manage/errors", :locals => { :obj => @school_year }

= form_for [:manage, @school_year], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :value, :class => 'control-label'
    .controls
      = f.number_field :value, :class => 'number_field input-xxlarge'

  .form-actions
    = link_to t('.cancel', :default => t("helpers.links.cancel")), manage_school_years_path, :class => 'btn'
    = f.submit nil, :class => 'btn btn-primary'
