= render :partial => "manage/manage/errors", :locals => { :obj => @user }

= form_for [:manage, @user], :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :firstname, :class => 'control-label'
    .controls
      = f.text_field :firstname, :class => 'text_field input-xxlarge'
  .control-group
    = f.label :lastname, :class => 'control-label'
    .controls
      = f.text_field :lastname, :class => 'text_field input-xxlarge'
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'text_field input-xxlarge'




  .form-actions
    = link_to t('.cancel', :default => t("helpers.links.cancel")), manage_users_path, :class => 'btn'
    = f.submit nil, :class => 'btn btn-primary'
