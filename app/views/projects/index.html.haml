- model_class = Project
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

.pagination
  %ul
    - @available_years.each do |year|
      %li= link_to year.value, projects_by_year_path(year.value)
%br

- @years.each do |year|
  %div{ :class => "span12"}
    %h2= "#{@year} : #{semestre(year.semestre, true)}"
    - year.projects.each do |project|
      .well
        %h3= project.name
        %ul
          - project.users.each do |user|
            %li= user.name
        %p= project.description
        = link_to "Go!", project.url, :class => "btn pull-right"
        .clearfix

